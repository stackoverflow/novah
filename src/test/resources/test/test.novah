module test

sumToTco : Int64 -> Int64 -> Int64
sumToTco x acc =
  if x <= 0L then acc
  else sumToTco (x - 1L) (x + acc)

letrec : Int -> Int
letrec x =
  let go n acc =
    if n < 0 then acc
    else go (n - 1) (acc + n)

  go x 0

pub
main : Array String -> Unit
main args =
  println (letrec (int args.[0]))
