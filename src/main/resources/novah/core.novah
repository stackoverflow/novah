(!=) : {{ Equals a }} -> a -> a -> Boolean
(!=) {{Equals eq}} x y = not (eq.equals x y)

pub instance
eqByte : Equals Byte
eqByte = Equals { equals: \x y -> equiByte x y }

pub instance
eqInt16 : Equals Int16
eqInt16 = Equals { equals: \x y -> equiInt16 x y }

pub instance
