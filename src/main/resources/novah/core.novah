eqFloat64 = Equals { equals: \x y -> equiFloat64 x y }

pub instance
eqChar : Equals Char
eqChar = Equals { equals: \x y -> equiChar x y }

equalsBoolean : Boolean -> Boolean -> Boolean
equalsBoolean =
  case _, _ of
    true, true -> true
    false, false -> true
    _, _ -> false

pub instance
eqBoolean : Equals Boolean
eqBoolean = Equals { equals: equalsBoolean }

